{{#partial "content"}}
    <h5>{{thisTeam.title}}</h5>
    <p>{{thisTeam.description}}</p>

    {{#if members}}
        <br>
    <p>Here are all the members listed in {{thisTeam.title}}</p>

    <ul>
        {{#each members}}
            <li>
                <p> {{ name }}</p>
                <p> {{ contact }}</p>

                <br>
                <a href="/teams/{{teamId}}/members/{{id}}/update">Edit this team member's information</a><br>
                <a href="/teams/{{teamId}}/members/{{id}}/delete">Remove this member from the team</a>
            </li>
            <br>
        {{/each}}
    </ul>
    {{else}}
        <p>This team doesn't have any members yet.</p>
    {{/if}}
    <a href="/members/new">Join this Team</a><br>
    <a href="/teams/{{thisTeam.id}}/update">Update this Hack team</a><br>
    <a href="/teams/{{thisTeam.id}}/delete">DELETE this team (These things cannot be undone)</a>



{{/partial}}

{{> layout.hbs}}