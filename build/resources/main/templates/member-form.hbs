{{#partial "content"}}

    {{#if editMember}}

        <div class="well">
            <h1>Update Member details:</h1>
            <form action="/teams/{{editMember.teamId}}/members/{{editMember.id}}/update" method="post">
                <div class="form-group">
                    <label for="teams">teams:</label>
                    <select id="teams" name="teamId" required>
                        {{#each teams}}
                            <option value="{{this.id}}">{{this.teamName}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class ="form-group">
                    <label for="name">participant name: </label>
                    <input id="name" name="name" type="text" class="form-control" value="{{editMember.name}}" required>
                </div>
                <div class ="form-group">
                    <label for="contact">please enter your email address: </label>
                    <input id="contact" name="contact" type="email" class="form-control" value="{{editMember.contact}}" required>
                </div>

                </div>
                <button type="submit" class="btn btn-success">Update Member Info</button>
            </form>
        </div>

    {{else}}


            <div class="well">
                <h1>Register a Participant!</h1>
                <form action="/members/new" method="post">
                    <div class="form-group">
                        <label for="teamId">Teams:</label>
                        <select id="teamId" name="teamId" required>
                            {{#each teams}}
                                <option value="{{id}}">{{title}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class ="form-group">
                        <label for="name">your name: </label>
                        <input id="name" name="name" type="text" class="form-control" placeholder="enter a good name(legal or otherwise)" Name required>
                    </div>
                    <div class ="form-group">
                        <label for="contact">contact </label>
                        <input id="contact" name="contact" type="text" class="form-control" placeholder="email please" required>
                    </div>
                    <button type="submit" class="btn btn-success">Register!</button>
                </form>
            </div>

    {{/if}}
{{/partial}}

{{> layout.hbs}}