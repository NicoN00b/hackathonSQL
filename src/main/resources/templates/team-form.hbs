{{#partial "content"}}

    {{#if editTeam}}
        <h1>Edit this Team!</h1>
        <form action="/teams/update" method="post">
            <select name="editTeamId" id="editTeamId">
                {{#each teams }}
                    <option value="{{id}}">{{title}}</option>
                {{/each}}
            </select>
            <label for="title">Edit this team's name</label>
            <input id="title" name="title" type="text" placeholder="new team name">
            <label for="description">Edit this team's description</label>
            <input id="description" name="description" type="text" placeholder="new team description">


    {{else}}
            <h1>Add a new Team!</h1>

        <form action="/teams" method="post">
            <label for="title">Team Name</label>
            <input id="title" name="title" type="text">

    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>
{{/partial}}

{{> layout.hbs}}